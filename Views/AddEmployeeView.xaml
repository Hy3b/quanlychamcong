<Window x:Class="QuanLyChamCong.Views.AddEmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thêm nhân viên mới" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Dòng 0: Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 1: Họ tên -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 2: Số điện thoại -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 3: Chức vụ -->
            <RowDefinition Height="Auto"/>
            <!-- Dòng 4: Khoảng trống đệm -->
            <RowDefinition Height="*"/>
            <!-- Dòng 5: Các nút bấm -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Cột 1: Nhãn (Label) -->
            <ColumnDefinition Width="110"/>
            <!-- Cột 2: Ô nhập liệu (Input) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- TIÊU ĐỀ -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="THÔNG TIN NHÂN VIÊN"
                   FontSize="20" FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- 1. HỌ TÊN -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Họ và tên:" 
                   VerticalAlignment="Center" Margin="0,0,0,15" FontWeight="SemiBold"/>
        <TextBox x:Name="txtFullName" Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Hoten}"
                 Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

        <!-- 2. SỐ ĐIỆN THOẠI -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Số điện thoại:" 
                   VerticalAlignment="Center" Margin="0,0,0,15" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPhone" Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Sodt}"
                 Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

        <!-- 3. CHỨC VỤ -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Chức vụ:" 
                   VerticalAlignment="Center" Margin="0,0,0,15" FontWeight="SemiBold"/>
        <TextBox x:Name="txtPosition" Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Chucvu}"
                 Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

        <!-- KHU VỰC NÚT BẤM (Footer) -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

            <!-- Nút Hủy -->
            <Button x:Name="btnCancel" Content="Hủy bỏ" Width="100" Height="35"
                    Background="#DDDDDD" BorderThickness="0" Margin="0,0,10,0"
                    Cursor="Hand" Command="{Binding HuyCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <!-- Nút Lưu -->
            <Button x:Name="btnSave" Content="Lưu lại" Width="100" Height="35"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0"
                    Cursor="Hand" Command="{Binding LuuCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>

    </Grid>
</Window>