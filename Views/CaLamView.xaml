<UserControl x:Class="QuanLyChamCong.Views.CaLamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyChamCong.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#F5F7FA" FontFamily="Segoe UI">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ActionBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="DangerRed" Color="#DC2626"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextLight" Color="#6B7280"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quản Lý Ca Làm Việc" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#111827" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#E5E7EB" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,15,0">
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Padding="35,8,10,8" VerticalContentAlignment="Center" ToolTip="Tìm theo tên ca...">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Path Data="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" 
                          Fill="#9CA3AF" Width="16" Height="16" HorizontalAlignment="Left" Margin="10,0,0,0" Stretch="Uniform"/>
                </Grid>

                <DatePicker SelectedDate="{Binding SelectedDay, UpdateSourceTrigger=PropertyChanged}"
                            Grid.Column="2" Margin="15,0,0,0" VerticalContentAlignment="Center" Height="36"></DatePicker>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Command="{Binding ThemCaCommand}" Background="{StaticResource ActionBlue}" BorderThickness="0" Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+Thêm Ca" Margin="0,0,5,0" FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SuaCaCommand}" CommandParameter="{Binding ElementName=BangCaLamViec, Path=SelectedItem}"
                        Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Foreground="{StaticResource TextDark}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25z" Fill="#6B7280" Width="14" Height="14" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="Sửa Ca"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding XoaCaCommand}" CommandParameter="{Binding ElementName=BangCaLamViec, Path=SelectedItem}"
                    Background="White" BorderBrush="#FEE2E2" BorderThickness="1" Foreground="{StaticResource DangerRed}" Width="69">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" Fill="{StaticResource DangerRed}" Width="14" Height="14" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="Xóa Ca"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Button Command="{Binding LoadDataCommand}" 
                        HorizontalAlignment="Right" 
                        Background="White" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Foreground="{StaticResource TextDark}">
                <StackPanel Orientation="Horizontal">

                    <Path Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" 
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                              Width="14" Height="14" 
                              Stretch="Uniform" 
                              Margin="0,0,5,0"/>

                    <TextBlock Text="Làm mới"/>
                </StackPanel>
            </Button>
        </Grid>

        <Border Grid.Row="3" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
            <DataGrid x:Name="BangCaLamViec" AutoGenerateColumns="False" 
                      CanUserAddRows="False" GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column" Background="White" BorderThickness="0"
                      RowHeight="50" HorizontalGridLinesBrush="#F3F4F6"
                      AlternatingRowBackground="Transparent"
                      IsReadOnly="True"
                      ItemsSource="{Binding DanhSachCa}">

                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Mã Ca" Binding="{Binding CaId}" Width="80" Foreground="{StaticResource TextLight}"/>
                    <DataGridTextColumn Header="Loại Ca" Binding="{Binding LoaiCa}" Width="*" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding NgayLam, StringFormat=dd/MM/yyyy}" Width="120" Foreground="{StaticResource TextLight}"/>
                    <DataGridTextColumn Header="Bắt đầu" Binding="{Binding GioBatDau}" Width="100" Foreground="{StaticResource TextLight}"/>
                    <DataGridTextColumn Header="Kết thúc" Binding="{Binding GioKetThuc}" Width="100" Foreground="{StaticResource TextLight}"/>
                    <DataGridTextColumn Header="Số Nhân Viên" Binding="{Binding SoNhanVien}" Width="100" Foreground="{StaticResource TextLight}"/>


                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
