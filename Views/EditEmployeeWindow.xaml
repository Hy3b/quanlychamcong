<Window x:Class="QuanLyChamCong.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa thông tin nhân viên" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="THÔNG TIN NHÂN VIÊN" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Họ và tên:"/>
            <TextBox Text="{Binding Name}" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Chức vụ:"/>
            <TextBox Text="{Binding Department}" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox Text="{Binding PhoneNumbers}" Margin="0,5,0,10" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Lưu thay đổi" Click="SaveButton_Click" Width="100" Height="30" Background="#2ecc71" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Hủy" Click="CancelButton_Click" Width="80" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>