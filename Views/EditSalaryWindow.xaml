<Window x:Class="QuanLyChamCong.Views.EditSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chỉnh sửa lương nhân viên" 
        Height="520" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Padding="25">
        <StackPanel>
            <TextBlock Text="Cập Nhật Lương" FontSize="20" FontWeight="Bold" Foreground="#1e3a8a" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nhân viên:" Margin="0,0,5,0" Foreground="#1565C0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding HoTen}" FontSize="16" FontWeight="Bold" Foreground="#1565C0" Margin="0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Lương cơ bản (VNĐ):"/>
            <TextBox Text="{Binding LuongCoBan, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Phụ cấp (VNĐ):"/>
            <TextBox Text="{Binding PhuCap, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Lương tăng ca (VNĐ):"/>
            <TextBox Text="{Binding LuongTangCa, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Trừ Thuế (VNĐ):"/>
            <TextBox Text="{Binding TruThue, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" Foreground="#D32F2F"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Hủy bỏ" Command="{Binding CancelCommand}" 
                        Background="#F5F5F5" Foreground="Gray" Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#DDDDDD"/>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Lưu lại" Command="{Binding SaveCommand}" 
                        Background="#2196F3" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>