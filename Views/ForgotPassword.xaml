<Window x:Class="QuanLyChamCong.Views.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left blue panel -->

		<Button Content="← Quay lại đăng nhập"
            Width="170" Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="20,10,0,0"
            Click="BtnBack_Click"/>
		<!-- Right form -->
        <StackPanel VerticalAlignment="Center" Margin="199,0,200,0" Height="172">

            <TextBlock Text="Vui lòng nhập lại số điện thoại" 
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Enter your phone" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Height="32" Text="" TextChanged="txtEmail_TextChanged" />

            <Button Content="SEND PASSWORD" 
                    Height="35" Margin="0,20,0,0"
                    Background="#0099FF" Foreground="White" 
                    FontWeight="Bold" Click="Button_Click"/>
            
            <TextBlock Text="Back to Login" Foreground="#0099FF"
                       HorizontalAlignment="Center" Margin="0,15,0,0"
                       Cursor="Hand">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding GoBackCommand}"/>
                </TextBlock.InputBindings>
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>
