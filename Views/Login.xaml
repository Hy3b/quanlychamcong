<Window x:Class="QuanLyChamCong.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChamCong.Views"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="450" Width="874">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Grid Background="#03A9F4">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="WELCOME" FontSize="36" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="To the best HR management software" 
                           FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                 
            </StackPanel>
        </Grid>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
                <TextBlock Text="LOGIN" FontSize="22" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock x:Name="SoDienThoai" Text="Số Điện Thoại" FontSize="14" Foreground="Gray"/>
                <TextBox x:Name="SoDienThoai_text" Margin="0,5,0,15" Height="30"/>

                <TextBlock Text="Password" FontSize="14" Foreground="Gray"/>
                <PasswordBox x:Name="PassWord_text" Margin="0,5,0,20" Height="30"/>

                <Button Content="LOGIN" 
                        Background="#03A9F4" 
                        Foreground="White"
                        Height="35"
                        FontWeight="Bold" 
                        BorderThickness="0"
                        Cursor="Hand" 
                        Click="Login_Click"/>
                <TextBlock Text="Forgot password?"
                   Foreground="#03A9F4"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   Cursor="Hand"
                   MouseDown ="ForgotPassword_Click"
                   FontWeight="SemiBold"/>
                <TextBlock Text="Sign Up"
                           Foreground="#03A9F4"
                           HorizontalAlignment="Center"
                           Margin="0,7,0,0"
                            Cursor="Hand"
                            MouseDown ="SignUp_Click"
                            FontWeight="SemiBold"/>
                           
            </StackPanel>
        </Grid>
    </Grid>
</Window>
