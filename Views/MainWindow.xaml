<Window x:Class="QuanLyChamCong.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChamCong.Views"
        xmlns:vm="clr-namespace:QuanLyChamCong.ViewModels"
        mc:Ignorable="d"
        Title="TRANG CHỦ QUẢN LÝ" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen">
    

    
    <Window.Resources>

        <SolidColorBrush x:Key="NavBackground" Color="#FF2D3A5C"/>
        <SolidColorBrush x:Key="NavForeground" Color="#FFC0C5CE"/>
        <SolidColorBrush x:Key="NavActiveBackground" Color="#FF007BFF"/>

        <Style x:Key="NavRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NavForeground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="30 15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource NavActiveBackground}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F4A6E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource NavBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20 20 20 30">
                <TextBlock Text="Quản lý nhân viên" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"/>
                <TextBlock Text="Trang quản lý" 
                           Foreground="{StaticResource NavForeground}" 
                           FontSize="12"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <RadioButton GroupName="NavMenu" 
                             Style="{StaticResource NavRadioButtonStyle}" 
                             IsChecked="True"
                            Command="{Binding ShowDashboardCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="18"/>
                        <TextBlock Text="Trang chủ" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton GroupName="NavMenu" Style="{StaticResource NavRadioButtonStyle}"
                             Command= "{Binding ShowEmployeesCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE716;" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="18"/>
                        <TextBlock Text="Nhân Viên" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton GroupName="NavMenu" Style="{StaticResource NavRadioButtonStyle}"
                             Command= "{Binding ShowAttendanceCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE823;" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="18"/>
                        <TextBlock Text="Chấm Công" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton GroupName="NavMenu" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9F9;" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="18"/>
                        <TextBlock Text="Lương thưởng" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>


                <RadioButton GroupName="NavMenu" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE787;" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="18"/>
                        <TextBlock Text="Lịch làm" VerticalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <Border Grid.Row="2" Background="#FF273352" Padding="20 15">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border CornerRadius="15" 
                            Width="30" Height="30" 
                            Background="#FF007BFF" 
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding ShortName}" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding OwnerName}" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Quản trị viên" 
                                   Foreground="{StaticResource NavForeground}" 
                                   FontSize="10"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </Grid>

        <Border Grid.Column="1" Background="#FFF5F7FA">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>

    </Grid>
</Window>