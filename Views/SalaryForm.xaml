<UserControl x:Class="QuanLyChamCong.Views.SalaryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000" Background="#F0F2F5">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F8F8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="20,15" Margin="0,0,0,2">
            <StackPanel>
                <TextBlock Text="Bảng lương của nhân viên" FontSize="24" FontWeight="Bold" Foreground="#1e3a8a"/>
                <TextBlock Text="Quản lý lương thưởng và thực lĩnh" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="15" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="252"/>
                    <ColumnDefinition Width="Auto" MinWidth="332.103"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="35">
                    <TextBlock Text="Chọn ngày:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Width="120" Height="35" VerticalContentAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Tìm theo tên hoặc ID..."
                         VerticalContentAlignment="Center" 
                         Padding="10,0"
                         Margin="30,0,150,0"
                         BorderBrush="#DDD" BorderThickness="1" Grid.ColumnSpan="2">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <TextBlock Text="{TemplateBinding Tag}" Foreground="#AAA" Margin="10,0,0,0" 
                                                           VerticalAlignment="Center" IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="Lương hàng tháng" 
                            Command="{Binding ShowHistoryCommand}"
                            Background="#FF9800" Foreground="White"
                            Height="35" Margin="0,0,10,0" Width="115"/>
                    <Button Content="Chỉnh sửa lương" 
                            Command="{Binding EditSalaryCommand}"
                            Background="#2196F3" Foreground="White"
                            Height="35" Width="115" Margin="0,0,10,0"/>
                    <Button Content="Làm mới" 
                            Command="{Binding RefreshCommand}"
                            Background="#2196F3" Foreground="White"
                            Height="35" Width="115" Margin="0,0,10,0"/>
                </StackPanel>

            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="12" Margin="15,0,15,15" Padding="15">
            <DataGrid ItemsSource="{Binding salaryForms}"
                      SelectedItem="{Binding SelectedSalaryItem}"
                      x:Name="dgChamCong"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0"
                      RowHeight="40"
                      Background="White"
                      BorderThickness="0"
                      AlternationCount="2"
                      AlternatingRowBackground="#FAFAFA">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding NhanVienId}" Width="60" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Họ và Tên" Binding="{Binding HoTen}" Width="1.5*" FontWeight="Bold" Foreground="#1565C0"/>

                    <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding LuongCoBanNgay, StringFormat={}{0:N0}}" Width="*"/>
                    <DataGridTextColumn Header="Phụ Cấp" Binding="{Binding PhuCap, StringFormat={}{0:N0}}" Width="*"/>
                    <DataGridTextColumn Header="Tăng ca" Binding="{Binding LuongTangCa, StringFormat={}{0:N0}}" Width="*"/>
                    <DataGridTextColumn Header="Trừ thuế" Binding="{Binding TruThue, StringFormat={}{0:N0}}" Width="*" Foreground="#D32F2F"/>

                    <DataGridTextColumn Header="Thực lĩnh ngày" Binding="{Binding ThucLinhNgay, StringFormat={}{0:N0}}" Width="*" FontWeight="Bold" Foreground="#2E7D32"/>

                    <DataGridTextColumn Header="Thời gian " Binding="{Binding TrangThai}" Width="*" Foreground="Gray"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>