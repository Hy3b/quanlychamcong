<Window x:Class="QuanLyChamCong.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="500" Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="3*"/>
            <!-- Form trái + phải -->
            <RowDefinition Height="1*"/>
            <!-- Nút -->
        </Grid.RowDefinitions>

        <!-- PHẦN 1: TIÊU ĐỀ -->
        <TextBlock Grid.Row="0"
               Text="Tạo Tài Khoản"
               FontSize="30"
               Foreground="#0099FF"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <!-- PHẦN 2 + 3: FORM TRÁI & PHẢI -->
        <Grid Grid.Row="1" Margin="20,2,20,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <!-- Form trái -->
                <ColumnDefinition Width="1*"/>
                <!-- Form phải -->
            </Grid.ColumnDefinitions>

            <!-- FORM TRÁI -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Số Điện Thoại"/>
                <TextBox x:Name="txtSoDienThoai" Height="30"/>
                <TextBlock Text="Mật Khẩu " Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtPass" Height="30"/>
                <TextBlock Text="Xác Nhận Mật Khẩu" Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtConfirm" Height="30"/>
            </StackPanel>

            <!-- FORM PHẢI -->
            <StackPanel Grid.Column="1" Margin="20">
                <TextBlock Text="ID"/>
                <TextBox x:Name="txtID" Height="30"/>

                <TextBlock Text="Tên Doanh Nghiệp" Margin="0,10,0,0"/>
                <TextBox x:Name="txtName" Height="30"/>
                <TextBlock Text="Tài khoản chủ sở hữu" Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtTaiKhoan" Height="30"/>
                <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                    <TextBlock Text="Vai Trò" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cbVaiTro" Width="200" Height="30">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Nhân viên"/>
                        <ComboBoxItem Content="Quản lý"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
        </Grid>

        <!-- PHẦN 4: NÚT SIGN UP -->
        <Button Grid.Row="2"
            Content="SIGN UP"
            Background="#0099FF" Foreground="White"
            FontSize="16"
            Height="50" Width="150"
            HorizontalAlignment="Center"
            Click="BtnSignUp_Click" Margin="0,2,0,35"/>
    </Grid>
</Window>
